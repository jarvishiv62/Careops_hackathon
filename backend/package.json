{
  "name": "vitalflow-backend",
  "version": "1.0.0",
  "description": "VitalFlow integrated health and fitness platform backend",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "npx prisma db push && npx prisma db seed && node src/app.js",
    "build": "npx prisma generate && echo 'Backend build completed'",
    "db:migrate": "npx prisma migrate dev",
    "db:deploy": "npx prisma migrate deploy",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "db:seed": "node prisma/seed.js"
  },
  "keywords": [
    "vitalflow",
    "health",
    "fitness",
    "medical",
    "wellness",
    "appointments"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.9.0",
    "@sendgrid/mail": "^8.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.4",
    "nodemailer": "^6.9.9",
    "twilio": "^5.0.0",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "prisma": "^5.9.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
